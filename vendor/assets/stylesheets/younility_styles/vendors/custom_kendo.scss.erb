}
.k-spreadsheet-active-cell {
    box-shadow: inset 0 0 0 1px $kendo-accent
}
.k-spreadsheet-active-cell td {
    border-color: $kendo-accent;
    box-shadow: inset 1px 1px 0 1px $kendo-accent, inset 0 0 0 1px $kendo-accent
}
.k-spreadsheet-active-cell.k-right td {
    box-shadow: inset 1px 1px 0 1px $kendo-accent, inset -2px 0 0 1px $kendo-accent
}
.k-spreadsheet-active-cell.k-bottom td {
    box-shadow: inset 1px 1px 0 1px $kendo-accent, inset 0 -2px 0 1px $kendo-accent
}
.k-spreadsheet-active-cell.k-right.k-bottom td {
    box-shadow: inset 1px 1px 0 1px $kendo-accent, inset -2px -2px 0 1px $kendo-accent
}
.k-ff .k-spreadsheet-active-cell td {
    box-shadow: inset 0 0 0 1px $kendo-accent
}
.k-spreadsheet-filter:hover {
    color: $text-colour;
    background: 0 0
}
.k-spreadsheet-popup .k-button:hover {
    background-color: $gray-lighter;
}
.k-spreadsheet-formula-list .k-state-focused,
.k-spreadsheet-popup .k-state-active {
    background-color: $kendo-accent
}

.k-grid {
  font-size: $font-size-table;

  tr {
    height: 3rem;

    &:last-of-type td {
      border-width: 0 0 0 1px;

      &:first-of-type {
        border-width: 0;
      }
    }
  }

  tfoot {
    background-color: $gray-lightest;

    td:only-child {
      border-bottom: 0;
    }
  }

  .k-dirty {
    display: none;
  }

  .k-pager-wrap,
  th.k-header,
  tr:hover {
    background-color: $gray-lightest;
  }

  .k-grid-header tr:first-child {
    background-color: $gray-lightest;

    td {
      border-left: 0;
    }
  }

  .k-edit-cell {
    padding: .4em .6em;
  }
}

.k-grid tr td {
  padding: .7rem .8rem;
}

.k-grid-header th.k-header {
  padding: .7rem .8rem;
}

.k-grid-header {
  padding-right: 0px !important;
}

.k-grid-content {
  overflow-y: auto;
}

.k-grid-header-wrap {
  overflow-y: hidden;
}

.k-edit-cell {
  &:hover {
    &::after {
      content: '';
    }
  }

  .k-input:focus {
    @extends .form-control;
  }

  .k-dropdown-wrap {
    border: 1px solid $gray;
    background: transparent;
    box-shadow: none !important;
  }
}

.k-popup .k-list {
  .k-item {
    background: $white;
    padding: .5rem;

    &.k-state-selected {
      color: $black;
      background-color: #e6e6e6;
    }
  }
}

.k-grid-toolbar:first-child {
  background: $gray-lightest;
}

.k-grid-header th.k-header {
  vertical-align: middle;
}

.k-textbox {
  padding: 0;

  &:focus {
    border: $input-btn-border-width solid $input-border-color;
    outline: none;
    box-shadow: none;
  }
}

.k-grid tbody:empty::before,
.k-grid tbody:empty::before {
  content: 'No results found.';
  float: left;
  width: 300px;
  padding-left: .5rem;
  line-height: 3rem;
  height: 3rem;
}

.k-datetimepicker {
  width: 100%;
  background-color: $white;

  .k-state-focused {
    border: $input-btn-border-width solid $input-border-color;
    box-shadow: none;
    outline: none;
  }
  .k-state-default {
    box-shadow: none;
  }
}

.k-dropdown-wrap,
.k-datetimepicker {
  border-style: initial;
}

.k-picker-wrap .k-input {
  height: auto;
}

.k-grid-filter.k-state-active {
  background-color: $gray-lightest;
  box-shadow: none;
}

.k-filter-menu {
  min-width: 165px;

  .k-dropdown-wrap {
    border-style: solid;
  }

  .k-widget {
    width: 100%;
  }
}

.k-filter-help-text {
  line-height: 2rem;
}

.k-i-arrow-s, .k-i-arrow-n, .k-i-arrow-e, .k-i-arrow-w,
.k-i-seek-e, .k-i-seek-w {
  background-image: none !important;
  font-size: .5rem;
  font-family: $font-family-icons;

  &:before {
    display: inline-block;
    color: $black;
    width: 16px;
    height: 16px;
    padding-top: .5rem;
  }
}

@media only screen and (max-width: 1024px) {
  .k-pager-numbers .k-current-page .k-link {

    &:after {
      background-image: none !important;
      font-size: .5rem;
      font-family: $font-family-icons;
      content: '\e114' !important;
      display: inline-block;
      color: $black;
      width: 16px;
      height: 16px;
      padding-top: .5rem;
      top: 0 !important;
    }

  }
}

.k-state-disabled {
  .k-i-arrow-s, .k-i-arrow-n, .k-i-arrow-e, .k-i-arrow-w,
  .k-i-seek-e, .k-i-seek-w {
    &:before {
      color: $gray-light;
    }
  }
}

.k-i-seek-e, .k-i-seek-w {
  width: 20px;
  height: 20px;
}

.k-i-arrow-s:before {
  content: '\e114';
}
.k-i-arrow-n:before {
  content: '\e113';
}
.k-i-arrow-e:before {
  content: '\e080';
}
.k-i-arrow-w:before {
  content: '\e079';
}
.k-i-seek-e:before {
  content: '\e080\e080';
  padding-top: .6rem;
}
.k-i-seek-w:before {
  content: '\e079\e079';
  padding-top: .6rem;
}

.k-popup {
  box-shadow: 0 1px 2px rgba(0,0,0,.2) !important;
}

.k-item {
  border-radius: 0 !important;
}

.k-tooltip {
  display: none !important;
}

.k-loading-mask .k-loading-image {
  background-image: url("<%= image_path('younility_styles/loading.gif') %>");
  background-color: rgba(245,245,245,0.3);
  background-size: 50px 50px;
}
