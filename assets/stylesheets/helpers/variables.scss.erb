// Please do not change the name of any of the variables. Some of these are overriding colours and other variables used in Bootstrap.

//Min Body Width
$min-body-width:          320px;
$top-nav-height:          65px;
$top-nav-height-sm:       40px;
$mobile-nav-height:       50px;
$side-nav-width:          150px;
$side-nav-width-md:       50px;

$footer-height:           50px;

// Transition times
$mobile-menu-transition:  300ms;

//Fonts
//

$font-family-sans-serif: 'Open Sans', sans-serif;
$font-family-icons:      'Glyphicons Halflings';
$font-family-base:       $font-family-sans-serif !default;

$default-font-size:       .875rem;
$font-size-base:          $default-font-size;
$font-size-sm:            .75rem;
$font-size-table:         .8rem;

//Colors
//

// Create grayscale
$gray-dark:               #4a4a4a;
$gray:                    #ccc;
$gray-light:              #ddd;
$gray-lighter:            #e0e0e0;
$gray-lightest:           #f5f5f5;

// Brand Colors
$brand-accent:            #46505c;
$brand-accent-dk:         #222934;
$brand-primary:           #f27727;
$brand-success:           #5cb85c;
$brand-info:              #428bca;
$brand-warning:           #f0ad4e;
$brand-danger:            #d9534f;
$brand-primary-hover:     #d95d0d;

// Variables used in custom Kendo UI css.
// Many of these colours were created from the Kendo Theme Builder so that match our current branding.
$kendo-primary:           #e3620e;
$kendo-primary-light:     #f9c39f;
$kendo-accent:            #428bca;
$primary-focused:         #f69e66;
$kendo-grid-tr-hover:     #dcdcdc;
$kendo-light-grey:        #ebebeb;

$kendo-background-grey:   #eceeef;

// Text Colours
$text-colour:             #212121;
$text-disabled:           #9e9e9e;
$light-text:              #e9eef3;
$blue-link:               #0275d8;

//Icon Colours
$light-icon:              #e9eef3;
$dark-icon:               #4a4a4a;

// Input Colors
$input-color:             $text-colour;
$input-color-placeholder: #9b9b9b;
$input-bg-disabled:       $light-icon;

//Tooltip Color
$tooltip-bg:              $dark-icon;
$tooltip-arrow-color:     $dark-icon;
$tooltip-opacity:         1;

// Custom Status Badge Colors
$status-created:          #d2d2d2;
$status-dispatched:       #7f6289;
$status-assigned:         #f0ad4e;
$status-accepted:         #5cb85c;
$status-closed:           $gray-dark;
$status-delivered:        #428bca;
$status-verified:         #d04a72;
$status-started:          #5bc0de;
$status-rejected:         #d0021b;

// Spacing
//
// Taken from Bootstraps variables.scss file and modified to match our needs
$spacer:                  1rem !default;
$spacer-x:                $spacer !default;
$spacer-y:                $spacer !default;

$spacers: (
  0_5: (
    x: $spacer-x / 2,
    y: $spacer-y / 2
  ),
  0: (
    x: 0,
    y: 0
  ),
  1: (
    x: $spacer-x,
    y: $spacer-y
  ),
  1_5: (
    x: ($spacer-x * 1.5),
    y: ($spacer-y * 1.5)
  ),
  2: (
    x: ($spacer-x * 2),
    y: ($spacer-y * 2)
  ),
  3: (
    x: ($spacer-x * 3),
    y: ($spacer-y * 3)
  )
) !default;

//
// Change default button styles to match font size used.
$btn-padding-x:           1rem !default;
$btn-padding-y:           .5rem !default;

$btn-padding-x-sm:        .5rem !default;
$btn-padding-y-sm:        .25rem !default;

$btn-padding-x-lg:        1.5rem !default;
$btn-padding-y-lg:        .75rem !default;

//List Group Variables
$list-group-border-radius:  0 !default;

//Custom checkboxes
$checkbox-image-path:                   '<%= image_path("checkbox/checkbox.svg") %>';
$checkbox-selected-image-path:          '<%= image_path("checkbox/checkbox-selected.svg") %>';

$disabled-checkbox-image-path:          '<%= image_path("checkbox/checkbox-disabled.svg") %>';
$disabled-checkbox-selected-image-path: '<%= image_path("checkbox/checkbox-selected-disabled.svg") %>';

//Custom radio buttons
$radio-image-path:                      '<%= image_path("radio/radio.svg") %>';
$radio-selected-image-path:             '<%= image_path("radio/radio-selected.svg") %>';

$disabled-radio-image-path:             '<%= image_path("radio/radio-disabled.svg") %>';
$disabled-radio-selected-image-path:    '<%= image_path("radio/radio-selected-disabled.svg") %>';

$custom-file-text: (
  placeholder: (
    en: '<%= I18n.t('form_for.file_browser.placeholder') %>'
  ),
  button-label: (
    en: '<%= I18n.t('form_for.file_browser.button') %>'
  )
);
